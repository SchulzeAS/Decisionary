extends ../layout
block layout-content
    div#creationContainer
        img(src='icons/Logo.svg').logoImage.noselect
        div.navigator#navigatorTop
            include navigator.pug
        div.stepsContainer
            div.topStepPadding
                span.invisible --
            div#step1Name.Steps
                include Step1Name.pug
            div#step2CriteriaOrder.Steps
                include Step2CriteriaOrder.pug
            div#step3Rating.Steps
                include Step3Rating.pug
            div#step4Overview.Steps
                include Step4OverviewTeilnehmen.pug
                    
        img.navButton#navBack(onclick='back()').noselect
        img.navButton#navNext(onclick='next()').noselect

    
